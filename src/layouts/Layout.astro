---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
		
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<style is:global>
			/* GLOBAL STYLES */
			
			/* 1. Font Settings & Smoothing */
			body {
				font-family: 'Inter', system-ui, -apple-system, sans-serif;
				-webkit-font-smoothing: antialiased;
				-moz-osx-font-smoothing: grayscale;
				/* Activates Inter's specific character variants (e.g. taller numbers) */
				font-feature-settings: "cv11", "cv05";
			}

			/* 2. Custom Scrollbar */
			::-webkit-scrollbar {
				width: 8px;
			}
			::-webkit-scrollbar-track {
				background: #f1f1f1; 
			}
			::-webkit-scrollbar-thumb {
				background: #cbd5e1; 
				border-radius: 4px;
			}
			::-webkit-scrollbar-thumb:hover {
				background: #94a3b8; 
			}
			
			/* 3. Legacy Hero Pattern (Optional, kept for safety) */
			.hero-pattern {
				background-color: #007BA7;
				background-image: linear-gradient(135deg, #007BA7 0%, #199BB6 100%);
			}
		</style>
	</head>
	<body class="bg-gray-50 text-slate-800 min-h-screen flex flex-col">
		<slot /> 
	</body>
</html>